# Application name
APP_NAME=order-list-client


# Server ports
SERVER_PORT=8081:80

# Timezone
TIMEZONE=Europe/Madrid

# Name used to make git commits
GIT_NAME=Victor

# Email used to make git commits
GIT_EMAIL=victorrmmb@hotmail.com


# Path to code source in the host
VOLUME_HOST_PATH_PHP_SOURCE=..


# Path to code in the container
VOLUME_CONTAINER_PATH_PHP_SOURCE=/home/developer/OrderList-client

# Path to public dir in the container
# You have to set the value of this variable in file nginx/default.conf.template
# ej: root /home/developer/OrderList-api/public;
VOLUME_CONTAINER_PATH_PUBLIC=/home/developer/OrderList-client/public

# Path to the data base volume in the container
VOLUME_CONTAINER_PATH_MYSQL=/var/lib/mysql
