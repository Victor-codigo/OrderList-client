{% extends "Components/HomeSection/ItemInfo/ItemInfoComponent.html.twig" %}

{% block mainFirstBlock %}
<h3 class="lead">{{ lang.description }}:</h3>
<p class="mt-3  text-break"
   data-js-item-description>
    { item description }
</p>

<h3 class="lead">{{ lang.address }}:</h3>
<p class="mt-3  text-break"
   data-js-item-address>
    { item address }
</p>

{% endblock mainFirstBlock %}

{% block secondaryFirstBlock %}

<section class="p-3  p-sm-4">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col lead">{{ lang.itemPriceNameHeader }}</th>
                <th scope="col">{{ lang.itemPricePriceHeader }}</th>
            </tr>
        </thead>
        <tbody class="table-group-divider"
               data-empty-message="{{ lang.shopsEmptyMessage }}"
               data-js-item-prices>

        </tbody>
    </table>
</section>

{% endblock secondaryFirstBlock %}