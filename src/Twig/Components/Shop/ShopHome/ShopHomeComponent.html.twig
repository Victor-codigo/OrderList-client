<div data-controller="ShopHomeComponent"
	 {#
	 data-action="ShopListItemComponent:onShopSelectedEvent->ShopHomeComponent#handlerOnListItemSelectedEvent"
	 #}
	 class="contaniner">

	{{ component('TitleComponent', { data: titleDto } ) }}

	{% if lang.validationErrors %}
	{{ component('AlertValidationComponent', { data: alertValidationComponentDto }) }}
	{% endif %}

	<div class="border  border-1  rounded-2  p-2">

		<div class="d-flex  flex-row  mb-3">

			<button type="button"
					class="btn btn-outline-primary  flex-grow-1  rounded-0  rounded-top"
					title="{{ lang.buttonShopAddTitle }}"
					data-bs-toggle="modal"
					data-bs-target="#{{ shopCreateModalDto.idAttribute }}">

				{% include "add-icon-blue-18x18.svg" %}

				<span class="align-middle">{{ lang.buttonShopAddLabel }}</span>
			</button>

			<div id="{{ shopRemoveMultiFormName }}"
				 data-remove-shops-id-input-name="{{ shopRemoveShopsIdFieldName }}"
				 data-js-form-remove-many-shops
				 novalidate>

				<button class="btn btn-outline-danger  flex-grow-0  ms-1  ps-4  pe-4  rounded-0  rounded-top"
						type="button"
						name="{{ shopRemoveMultipleSubmit }}"
						title="{{ lang.buttonShopRemoveMultipleTitle }}"
						data-bs-toggle="modal"
						data-bs-target="#{{ shopRemoveMultiModalIdAttribute }}"
						data-action="ShopHomeComponent#triggerOnShopRemoveMulti"
						data-js-form-remove-many-shops-button>

					{% include "remove-icon-red-24x24.svg" %}
				</button>
			</div>
		</div>

		{{ component('ShopListComponent', { data: shopListComponentDto }) }}
	</div>


	{{ component('ModalComponent', { data: shopCreateModalDto }) }}
	{{ component('ModalComponent', { data: shopRemoveMultiModalDto }) }}
</div>