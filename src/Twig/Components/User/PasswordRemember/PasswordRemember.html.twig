<form id="frm_password_remember"
	  name="{{ formName }}"
	  data-controller="PasswordRememberComponent"
	  class="contaniner  p-5"
	  method="post"
	  enctype="multipart/form-data"
	  novalidate>
	<input type="hidden"
		   name="{{ tokenCsrfFieldName }}"
		   value="{{ data.csrfToken }}" />

	{% if lang.validationErrors.messages %}
	{{ component('AlertComponent', { data: lang.validationErrors }) }}
	{% endif %}

	<div class="mb-5 pt-5 display-1 text-center">
		{{ lang.title }}
	</div>

	<div class="mb-3">
		<label for="email"
			   class="form-label">{{ lang.emailLabel }}</label>
		<input type="email"
			   class="form-control"
			   id="email"
			   name="{{ emailFieldName }}"
			   placeholder="{{ lang.emailPlaceholder }}"
			   value="{{ data.email }}"
			   required>
		<div class="invalid-feedback">{{ lang.emailMsgInvalid }}</div>
	</div>

	<div class="mt-5">
		<input type="submit"
			   class="btn btn-primary w-100"
			   name="{{ submitFieldName }}"
			   value="{{ lang.passwordRememberButton }}" />
	</div>
</form>