{% trans_default_domain 'FooterComponent' %}

<footer data-controller="FooterComponent"
		class="align-self-end  w-100  bg-dark  text-center  text-light  p-3">
	<p class="pt-5"
	   xmlns:cc="http://creativecommons.org/ns#">
		<a class="link-light  link-underline-opacity-0  link-underline-opacity-100-hover"
		   rel="cc:attributionURL"
		   href="https://github.com/Victor-codigo">
			{{ globals.footerComponentDto.domainName }}
		</a>
		{{ 'license.text'|trans }}
		<a class="link-light  link-underline-opacity-0  link-underline-opacity-100-hover"
		   href="https://creativecommons.org/licenses/by-nc-nd/4.0/?ref=chooser-v1"
		   target="_blank"
		   rel="license noopener noreferrer"
		   style="display:inline-block;">

			<img style="height:22px!important;margin-left:1rem;vertical-align:bottom;"
				 src="https://mirrors.creativecommons.org/presskit/icons/cc.svg?ref=chooser-v1"
				 alt="">
			CC 4.0
			<img style="height:22px!important;margin-left:1rem;vertical-align:bottom;"
				 src="https://mirrors.creativecommons.org/presskit/icons/by.svg?ref=chooser-v1"
				 alt="">
			BY
			<img style="height:22px!important;margin-left:1rem;vertical-align:bottom;"
				 src="https://mirrors.creativecommons.org/presskit/icons/nc.svg?ref=chooser-v1"
				 alt="">
			NC
			<img style="height:22px!important;margin-left:1rem;vertical-align:bottom;"
				 src="https://mirrors.creativecommons.org/presskit/icons/nd.svg?ref=chooser-v1"
				 alt="">
			ND
		</a>
	</p>

	<p class="mt-3  pb-5">
		 <a class="link-light link-underline-opacity-0 link-underline-opacity-100-hover  me-3"
		   href="{{ path('legal_notice', { '_locale': app.request.locale }) }}">
			{{ 'legal.legal_note'|trans }}
		</a>
		<a class="link-light link-underline-opacity-0 link-underline-opacity-100-hover"
		   href="{{ path('privacy_notice', { '_locale': app.request.locale }) }}">
			{{ 'legal.privacy_note'|trans }}
		</a>
	</p>
</footer>