<li class="list-group-item  list-group-item-action  d-flex  flex-row  p-0  mt-1  mb-1  border  border-1  border-light-subtle"
    data-controller="OrderListItemComponent"
    data-item-data="{{ orderDataJson }}"
    data-js-list-item>

    <label class="d-flex  flex-row  flex-grow-1  align-items-center">

        <input class="form-check-input m-2  align-self-center"
               type="checkbox"
               data-js-checkbox>

        {% if data.noImage %}

        <div class="flex-grow-0  border-0  shop-list-item__image  p-0"
             title="{{ lang.imageItemTitle }}"
             data-js-item-image>

            {% include "order/order-no-image.svg" %}
        </div>

        {% else %}

        <img class="flex-grow-0  border-0  shop-list-item__image  p-0"
             src="{{ data.image }}"
             alt="{{ lang.imageItemAlt }}"
             title="{{ lang.imageItemTitle }}"
             data-js-item-image>

        {% endif %}

        <p class="fs-5  my-4  mx-2">
            {{ data.name }}
        </p>
    </label>

    <button type="button"
            class="btn  flex-grow-0  ps-4  pe-4  rounded-0  border  border-0  border-start  border-end-0  border-light-subtle  order-list-item__button-bought"
            value="{{ data.id }}"
            title="{{ lang.notBoughtItemButtonTitle }}"
            data-action="OrderListItemComponent#toggleMarkAsBought"
            data-order-bought-title="{{ lang.boughtItemButtonTitle }}"
            data-order-not-bought-title="{{ lang.notBoughtItemButtonTitle }}"
            data-js-item-bought>

        {% include 'order/bought-icon.svg' %}
    </button>

    <button type="button"
            class="btn  flex-grow-0  ps-4  pe-4  rounded-0  border  border-0  border-start  border-end-0  border-light-subtle  btn-outline-primary  button-primary-color-dark"
            value="{{ data.id }}"
            alt="{{ lang.infoItemButtonAlt }}"
            title="{{ lang.infoItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.orderInfoModalIdAttribute }}"
            data-action="OrderListItemComponent#sendMessageHomeListItemInfoToParent">

        {% include 'info-icon.svg' %}
    </button>

    <button type="button"
            class="btn  flex-grow-0  ps-4  pe-4  rounded-0  border  border-0  border-start  border-end-0  border-light-subtle  btn-outline-primary  button-primary-color-dark"
            value="{{ data.id }}"
            alt="{{ lang.modifyItemButtonAlt }}"
            title="{{ lang.modifyItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.modifyFormModalIdAttribute }}"
            data-action="OrderListItemComponent#sendMessageHomeListItemModifyToParent">

        {% include 'modify-icon.svg' %}
    </button>

    <button type="button"
            data-js-remove-button
            class="btn  flex-grow-0  ps-4  pe-4  rounded-0  border  border-0  border-start  border-light-subtle  btn-outline-danger"
            value="{{ data.id }}"
            alt="{{ lang.removeItemButtonAlt }}"
            title="{{ lang.removeItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.deleteFormModalIdAttribute }}"
            data-action="OrderListItemComponent#sendMessageHomeListItemRemoveEvent">

        {% include 'remove-icon.svg' %}
    </button>
</li>