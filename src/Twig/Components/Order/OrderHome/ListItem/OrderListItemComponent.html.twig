<li class="list-group-item  list-group-item-action  d-flex  flex-row  p-0  mt-1  mb-1  border  border-1  border-light-subtle"
    data-controller="OrderListItemComponent"
    data-item-data="{{ orderDataJson }}"
    data-js-list-item>

    <label class="d-flex  flex-row  flex-grow-1  align-items-center">

        {% if not data.hideInteraction %}

        <input class="form-check-input m-2  align-self-center"
               type="checkbox"
               data-js-checkbox>

        {% endif %}

        {% if data.noImage %}

        <div class="border-0  order-list-item__image   p-0"
             title="{{ lang.imageItemTitle }}"
             data-js-item-image>

            {% include "common/order/order-no-image.svg" %}
        </div>

        {% else %}

        <img class="border-0  order-list-item__image  p-0"
             src="{{ data.image }}"
             alt="{{ lang.imageItemAlt }}"
             title="{{ lang.imageItemTitle }}"
             data-js-item-image>

        {% endif %}

        {% if not hasPrice and not data.hideInteraction %}

        <p class="fs-5  my-2  mx-2  text-warning">
            {{ data.name }}
        </p>

        {% else %}

        <p class="fs-5  my-2  mx-2">
            {{ data.name }}
        </p>

        {% endif %}

    </label>

    {% if not data.hideInteraction %}

    <button type="button"
            class="btn  px-3  py-2  rounded-0  border  border-0  border-start  border-end-0  border-light-subtle  order-list-item__button-bought"
            value="{{ data.id }}"
            title="{{ lang.notBoughtItemButtonTitle }}"
            data-action="OrderListItemComponent#toggleMarkAsBought"
            data-order-bought-title="{{ lang.boughtItemButtonTitle }}"
            data-order-not-bought-title="{{ lang.notBoughtItemButtonTitle }}"
            data-js-item-bought>

        {% include "common/order/bought-icon.svg" %}
    </button>

    {% endif %}

    {% if data.hideInteraction %}

    <button type="button"
            class="btn  px-3  py-2  rounded-0  border  border-0  border-start  border-end-0  border-light-subtle  btn-outline-primary  button-primary-color-dark  order-list-item__button  order-list-item__button--info"
            value="{{ data.id }}"
            alt="{{ lang.infoItemButtonAlt }}"
            title="{{ lang.infoItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.orderInfoModalIdAttribute }}"
            data-action="OrderListItemComponent#sendMessageHomeListItemInfoToParent">

        {% include "common/info-icon.svg" %}
    </button>

    {% else %}

    <button type="button"
            class="btn  px-3  py-2  rounded-0  border  border-0  border-start  border-end-0  border-light-subtle  btn-outline-primary  button-primary-color-dark  order-list-item__button"
            value="{{ data.id }}"
            alt="{{ lang.infoItemButtonAlt }}"
            title="{{ lang.infoItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.orderInfoModalIdAttribute }}"
            data-action="OrderListItemComponent#sendMessageHomeListItemInfoToParent">

        {% include "common/info-icon.svg" %}
    </button>

    {% endif %}

    {% if not data.hideInteraction %}

    <div class="dropdown  dropstart">
        <button type="button"
                class="btn border-light-subtle  btn-outline-primary  button-primary-color-dark  rounded-0  h-100"
                data-bs-toggle="dropdown"
                aria-expanded="false">

            {% include "common/dots-vertical-icon.svg" %}

        </button>
        <ul class="dropdown-menu">

            <li>
                <button type="button"
                        class="btn  d-flex  flex-row  px-3  py-3  rounded-0  border  border-0  border-light-subtle  btn-outline-primary  button-primary-color-dark  order-list-item__button--info-menu"
                        value="{{ data.id }}"
                        alt="{{ lang.infoItemButtonAlt }}"
                        title="{{ lang.infoItemButtonTitle }}"
                        data-bs-toggle="modal"
                        data-bs-target="#{{ data.orderInfoModalIdAttribute }}"
                        data-action="OrderListItemComponent#sendMessageHomeListItemInfoToParent">

                    <div>

                        {% include "common/info-icon.svg" %}

                    </div>
                    <div class="ms-2">

                        {{ lang.infoItemButtonLabel }}

                    </div>
                </button>
            </li>

            <li>
                <button type="button"
                        class="btn  d-flex  flex-row  px-3  py-3  rounded-0  border  border-0  btn-outline-primary  button-primary-color-dark  order-list-item__button--menu"
                        value="{{ data.id }}"
                        alt="{{ lang.modifyItemButtonAlt }}"
                        title="{{ lang.modifyItemButtonTitle }}"
                        data-bs-toggle="modal"
                        data-bs-target="#{{ data.modifyFormModalIdAttribute }}"
                        data-action="OrderListItemComponent#sendMessageHomeListItemModifyToParent">

                    <div>

                        {% include "common/modify-icon.svg" %}

                    </div>
                    <div class="ms-2">

                        {{ lang.modifyItemButtonLabel }}

                    </div>
                </button>
            </li>

            <li>
                <button type="button"
                        data-js-remove-button
                        class="d-flex  flex-row  btn  px-3  py-3  border  border-0  rounded-0  border-light-subtle  btn-outline-danger  order-list-item__button--menu"
                        value="{{ data.id }}"
                        alt="{{ lang.removeItemButtonAlt }}"
                        title="{{ lang.removeItemButtonTitle }}"
                        data-bs-toggle="modal"
                        data-bs-target="#{{ data.deleteFormModalIdAttribute }}"
                        data-action="OrderListItemComponent#sendMessageHomeListItemRemoveEvent">

                    <div>

                        {% include "common/remove-icon.svg" %}

                    </div>
                    <div class="ms-2">

                        {{ lang.removeItemButtonLabel }}

                    </div>
                </button>
            </li>
        </ul>
    </div>

    {% endif %}

</li>