<div data-controller="OrderHomeSectionComponent"
     data-action="OrderListItemComponent:orderBoughtChanged->OrderHomeSectionComponent#handleMessageOrderBoughtChanged"
     class="contaniner  position-relative"
     data-list-orders-id="{{ data.listOrdersId }}"
     data-group-id="{{ data.groupId }}"
     data-list-name="{{ data.homeSectionComponentDto.title }}">

    {% set langExtend = lang %}
    {% set dataExtend = data %}
    {% component HomeSectionComponent with { data: data.homeSectionComponentDto } %}

    {% block overTitle %}


    {% endblock overTitle %}

    {% block headerButtonsBetweenBlock %}

    <div class="d-flex  ms-1">
        {{ component('ButtonLoadingComponent', { data: buttonShareWhatsApp } ) }}
    </div>

    {% endblock headerButtonsBetweenBlock %}

    {% block headerBlock %}
    <div class="d-flex  flex-row  justify-content-end  mt-3  me-3">
        <span class="lead  fw-semibold  order-bought-price  fs-5  primary-color-dark">
            {{ langExtend.currentBought }}
        </span>
        &nbsp;
        <span class="lead  fw-semibold  order-bought-price  fs-5  primary-color-dark"
              data-js-price-bought>
        </span>
        <span class="lead  fw-semibold  order-bought-price  fs-5  primary-color-dark">
            &nbsp;&nbsp;/&nbsp;&nbsp;
        </span>
        <span class="
              lead">
            {{ langExtend.totalBought }}
        </span>
        &nbsp;
        <span class="lead"
              data-js-price-total>
        </span>
    </div>
    {% endblock headerBlock %}
    {% endcomponent %}

    {{ component('ModalComponent', { data: data.listItemsModalDto } ) }}
    {{ component('ModalComponent', { data: data.orderInfoModalDto } ) }}
</div>