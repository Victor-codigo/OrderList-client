<button data-controller="ButtonLoadingComponent"
        class="btn  btn-primary  flex-grow-1  rounded-0  rounded-end"
        type="button">

     <span class="spinner-border spinner-border-sm"
           aria-hidden="true"
           data-js-spinner></span>
     <span role="status"
           data-js-button-text>
          {{ data.label }}
     </span>
     <span role="status"
           data-js-button-text-loading>
          {{ data.loadingLabel }}
     </span>
</button>