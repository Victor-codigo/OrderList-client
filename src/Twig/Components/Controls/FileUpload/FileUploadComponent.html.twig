<div id="{{ data.componentId }}"
     class="pb-4  border-bottom"
     data-controller="FileUploadComponent">

  <div class="position-relative  d-flex justify-content-center">

    <img src="{{ imageAvatarPath }}"
         width="200"
         height="200"
         alt="{{ data.imageAlt }}"
         data-no-avatar="{{ data.imageNoAvatarPath }}"
         data-js-selector="avatar"/>

    <button type="button"
            class="js-btn-image-remove btn btn-outline-danger  position-absolute  top-0  end-0"
            data-js-selector="image_remove_button">
      <svg xmlns="http://www.w3.org/2000/svg"
           width="16"
           height="16"
           fill="currentColor"
           class="bi bi-x-lg"
           viewBox="0 0 16 16">
        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
      </svg>
    </button>

  </div>
  <input class="form-control"
         type="file"
         name="{{ data.controlName }}"/>

  <input type="hidden"
         name="{{ data.controlDeleteImageName }}"
         value="false"
         data-js-selector="image_remove"/>
</div>