{% trans_default_domain 'HomePageComponent' %}

{% block title %}

{% endblock %}

{% block headJs %}
{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block headerContent %}
<nav class="d-flex  flex-row  justify-content-between  container-lg  p-3  navigation">
    <a href="{{ path('home') }}">
        <img class="navigation__logo  ms-4"
             src="/assets/images/common/logo-white.png"
             title="{{ 'logo.title'|trans({'%domain_name%': data.domainName}) }}"
             alt="{{ 'logo.title'|trans({'%domain_name%': data.domainName}) }}">
    </a>
    <div class="d-flex  flex-row  gap-lg-5  py-3">
        <div class="d-flex  flex-row  align-content-center">
            {% if data.locale=='es' %}

            <a class="btn-nav  d-flex  flex-column  justify-content-center  p-3"
               href="{{ data.languageUrl }}"
               title="{{ 'button.language.title'|trans }}"
               role="button"
               type="button">

                {% include "flag/english-flag.svg" %}
            </a>

            {% else %}

            <a class="btn-nav  d-flex  flex-column  justify-content-center  p-3"
               href="{{ data.languageUrl }}"
               title="{{ 'button.language.title'|trans }}"
               role="button">

                {% include "flag/spanish-flag.svg" %}
            </a>

            {% endif %}

            <button class="btn  btn-nav  rounded-0  p-3  "
                    type="button"
                    title="{{ 'button.theme.title'|trans }}"
                    data-js-theme-button>
                <div hidden
                     data-js-theme-dark>
                    {% include "theme-dark-mode-icon.svg" %}
                </div>
                <div hidden
                     data-js-theme-light>
                    {% include "theme-light-mode-icon.svg" %}
                </div>
                <div hidden
                     data-js-theme-auto>
                    {% include "theme-auto-mode-icon.svg" %}
                </div>
            </button>

        </div>
    </div>
</nav>

<section class="container  px-5  text-light  content">
    <div class="row gx-5 align-items-center">
        <div class="col-lg-5  offset-lg-1  content__info">
            <h1 class="fs-1">
                {{ 'main_info.title'|trans }}
            </h1>
            <p class="fs-5  mb-5">
                {{ 'main_info.info'|trans({'%domain_name%': data.domainName})|raw }}
            </p>
        </div>
        <nav class="col-lg-5  d-flex  justify-content-lg-end  justify-content-sm-center">
            <ul class="list-group  list-nav-section">
                <li
                    class="list-group-item  bg-transparent  py-0  border-0  d-flex  justify-content-end  list-nav-section__item">
                    <a class="link-light  link-offset-2  link-underline-opacity-25  link-underline-opacity-75-hover  fs-4  px-3  py-3  rounded-1"
                       href="">
                        List shop

                        {% include "list_orders/list-orders-no-image.svg" %}
                    </a>
                </li>
                <li
                    class="list-group-item  bg-transparent  py-0  border-0  rounded-1  d-flex  justify-content-end  list-nav-section__item">
                    <a class="link-light  link-offset-2  link-underline-opacity-25  link-underline-opacity-75-hover  fs-4  px-3  py-3  rounded-1"
                       href="">
                        Products

                        {% include "product/product-no-image.svg" %}
                    </a>
                </li>
                <li
                    class="list-group-item  bg-transparent  py-0  border-0  rounded-1  d-flex  justify-content-end  list-nav-section__item">
                    <a class="link-light  link-offset-2  link-underline-opacity-25  link-underline-opacity-75-hover  fs-4  px-3  py-3  rounded-1"
                       href="">
                        Shops

                        {% include "shop/shop-no-image.svg" %}
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</section>
{% endblock %}