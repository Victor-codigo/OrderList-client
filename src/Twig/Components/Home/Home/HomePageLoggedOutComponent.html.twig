{% trans_default_domain 'HomePageComponent' %}

{% block title %}

{% endblock %}

{% block headJs %}
{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block headerContent %}
<nav class="d-flex  flex-row  justify-content-between  container-lg  p-3  navigation"
     data-js-navigation-bar>
    <a href="{{ path('home') }}">

        <img class="navigation__logo  ms-4"
             src="{{ asset('build/images/common/logo-white.png') }}"
             title="{{ 'logo.title'|trans({'%domain_name%': data.domainName}) }}"
             alt="{{ 'logo.title'|trans({'%domain_name%': data.domainName}) }}">
    </a>
    <div class="d-flex  flex-row-reverse  flex-wrap  row-gap-3  gap-lg-5  py-3">
        <div class="d-flex  flex-row  align-items-center  justify-content-between">

            <a class="login-and-signup  link-light  link-offset-2  link-underline-opacity-25  link-underline-opacity-75-hover  px-3"
               href="{{ path('user_login_home') }}"
               title="{{ 'button.login.title'|trans }}">
                {{ 'button.login.label'|trans }}
            </a>

            <a class="login-and-signup  link-light  link-offset-2  link-underline-opacity-25  link-underline-opacity-75-hover  px-3"
               href="{{ path('user_register') }}"
               title="{{ 'button.sign_up.title'|trans }}">
                {{ 'button.sign_up.label'|trans }}
            </a>

        </div>
        <div class="d-flex  flex-row  align-content-center">
            {% if data.locale=='es' %}

            <a class="btn-nav  d-flex  flex-column  justify-content-center  p-3"
               href="{{ data.languageUrl }}"
               title="{{ 'button.language.title'|trans }}"
               role="button"
               type="button">

                {% include "common/flag/english-flag.svg" %}
            </a>

            {% else %}

            <a class="btn-nav  d-flex  flex-column  justify-content-center  p-3"
               href="{{ data.languageUrl }}"
               title="{{ 'button.language.title'|trans }}"
               role="button">

                {% include "common/flag/spanish-flag.svg" %}
            </a>

            {% endif %}

            <button class="btn  btn-nav  rounded-0  p-3"
                    type="button"
                    title="{{ 'button.theme.title'|trans }}"
                    data-js-theme-button>
                <div hidden
                     data-js-theme-dark>
                    {% include "common/theme-dark-mode-icon.svg" %}
                </div>
                <div hidden
                     data-js-theme-light>
                    {% include "common/theme-light-mode-icon.svg" %}
                </div>
                <div hidden
                     data-js-theme-auto>
                    {% include "common/theme-auto-mode-icon.svg" %}
                </div>
            </button>

        </div>
    </div>
</nav>


<section class="container  px-5    text-light  content">
    <div class="row gx-5 align-items-center">
        <div class="col-lg-6">
            <h1 class="fs-1">
                {{ 'main_info.title'|trans }}
            </h1>
            <p class="fs-5  mb-4">
                {{ 'main_info.info'|trans({'%domain_name%': data.domainName})|raw }}
            </p>

            <a href="{{ path('home_tryout') }}"
               class="btn  btn-warning  p-2  px-5  mt-3  mt-md-0  fs-4  btn-try-it-out"
               type="button">
                {{ 'main_info.try_it_out'|trans }}
            </a>

        </div>
        <div class="col-lg-6  d-flex  justify-content-center">
            <img class="image-main"
                 src="{{ asset('build/images/common/home/image-header.png') }}"
                 title="{{ 'main_info.title'|trans }}"
                 alt="{{ 'main_info.title'|trans }}">
        </div>
    </div>
</section>
{% endblock %}