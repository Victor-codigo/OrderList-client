<li class="list-group-item  list-group-item-action  d-flex  flex-row  p-0  mt-1  mb-1  border  border-1  border-light-subtle"
    data-controller="GroupListItemComponent"
    data-item-data="{{ groupDataJson }}"
    data-js-list-item>

    <label class="d-flex  flex-row  flex-grow-1">

        <input class="form-check-input m-2  align-self-center"
               type="checkbox"
               data-js-checkbox>

        {% if data.noImage %}

        <div class="flex-grow-0  border-0  group-list-item__image  p-0"
             title="{{ lang.imageItemTitle }}"
             data-js-item-image>

            {% include "group/group-no-image.svg" %}
        </div>

        {% else %}

        <img class="flex-grow-0  border-0  group-list-item__image  p-0"
             src="{{ data.image }}"
             alt="{{ lang.imageItemAlt }}"
             title="{{ lang.imageItemTitle }}"
             data-js-item-image>

        {% endif %}

        <div class="d-flex  flex-column  flex-grow-1  ps-3  pe-3  p-2">

            <div class="d-flex  flex-row  justify-content-between">

                <p class="fs-5">
                    {{ data.name }}
                </p>
            </div>

            {% if data.admin %}

            <span class="me-auto  badge  rounded-pill  text-bg-success">
                {{ lang.adminLabel }}
            </span>

            {% endif %}

        </div>
    </label>

    <a href="{{ urlGroupUsers|escape('html_attr') }}"
       class="d-flex"
       role="button"
       title="{{ lang.groupUsersLinkItemButtonTitle }}">

        <button type="button"
                class="btn  flex-grow-0  ps-5  pe-5  rounded-0  border  border-0  border-start  border-end-0  border-light-subtle  btn-outline-primary  group-list-item__group-users-button">

            {% include 'group_users/group-users-no-image.svg' %}
        </button>
    </a>

    <button type="button"
            class="btn  flex-grow-0  ps-4  pe-4  rounded-0  border  border-0  border-start  border-end-0  border-light-subtle  btn-outline-primary"
            value="{{ data.id }}"
            title="{{ lang.infoItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.groupInfoModalIdAttribute }}"
            data-action="GroupListItemComponent#sendMessageHomeListItemInfoToParent">

        {% include 'info-icon-blue-24x24.svg' %}
    </button>

    {% if data.admin %}

    <button type="button"
            class="btn  flex-grow-0  ps-4  pe-4  rounded-0  border  border-0  border-start  border-end-0  border-light-subtle  btn-outline-primary"
            value="{{ data.id }}"
            title="{{ lang.modifyItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.modifyFormModalIdAttribute }}"
            data-action="GroupListItemComponent#sendMessageHomeListItemModifyToParent">

        {% include 'modify-icon-blue-24x24.svg' %}
    </button>

    <button type="button"
            data-js-remove-button
            class="btn  flex-grow-0  ps-4  pe-4  rounded-0  border  border-0  border-start  border-light-subtle  btn-outline-danger"
            value="{{ data.id }}"
            title="{{ lang.removeItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.deleteFormModalIdAttribute }}"
            data-action="GroupListItemComponent#sendMessageHomeListItemRemoveEvent">

        {% include 'remove-icon-red-24x24.svg' %}
    </button>

    {% endif %}

</li>