<form id="{{ formName }}"
	  name="{{ formName }}"
	  data-controller="GroupCreateComponent"
	  class="contaniner  p-5"
	  method="post"
	  enctype="multipart/form-data"
	  novalidate>

	{% if lang.validationErrors %}
	{{ component('AlertComponent', { data: lang.validationErrors }) }}
	{% endif %}


	<div class="mb-5 pt-5 display-1 text-center">
		{{ lang.title }}
	</div>

	<input type="hidden"
		   name="{{ tokenCsrfFieldName }}"
		   value="{{ data.csrfToken }}" />

	<input type="hidden"
		   name="{{ groupIdFieldName }}"
		   value="{{ data.groupId }}" />

	<div class="mb-3">
		<label for="name"
			   class="form-label">

			{{ lang.nameLabel }}
		</label>
		<input type="name"
			   class="form-control"
			   id="name"
			   maxlength="50"
			   name="{{ nameFieldName }}"
			   placeholder="{{ lang.namePlaceholder }}"
			   value="{{ data.name }}"
			   pattern="[a-zA-Z0-9_]+"
			   required>

		<div class="invalid-feedback">
			{{ lang.nameMsgInvalid }}
		</div>
	</div>

	<div class="mt-5">
		<input type="submit"
			   class="btn btn-primary w-100"
			   name="{{ submitFieldName }}"
			   value="{{ lang.groupUserAddButton }}" />

	</div>
</form>