{% extends "Components/HomeSection/ItemInfo/ItemInfoComponent.html.twig" %}

{% block mainFirstBlock %}
<h3 class="lead">{{ lang.description }}:</h3>
<p class="mt-3"
   data-js-item-description>
    { item description }
</p>
{% endblock mainFirstBlock %}

{% block imageBelow %}

<span class="mx-auto  mt-1  mb-1  badge  rounded-pill  text-bg-success"
      hidden
      data-js-user-admin>
    {{ lang.adminLabel }}
</span>

<small class="fs-6  text-center  text-secondary">
    {{ lang.createdOn }}
    <br><small data-js-item-date>{ item date }</small>
</small>

{% endblock imageBelow %}