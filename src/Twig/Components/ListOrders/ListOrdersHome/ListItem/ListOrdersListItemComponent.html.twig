<li class="list-group-item  list-group-item-action  d-flex  flex-row  p-0  mt-1  mb-1  border border-1"
    data-controller="ListOrdersListItemComponent"
    data-item-data="{{ productDataJson }}"
    data-js-list-item>

    <label class="d-flex  flex-row  flex-grow-1">

        <input class="form-check-input m-2  align-self-center"
               type="checkbox"
               data-js-checkbox>

        <div class="flex-grow-0  border-0  shop-list-item__image  p-0"
             title="{{ lang.imageItemTitle }}"
             data-js-item-image>

            {% include "list_orders/list-orders-no-image-200x200.svg" %}
        </div>

        <div class="d-flex  flex-column  flex-grow-1  ps-3  pe-3  p-2">

            <div class="d-flex  flex-row  justify-content-between">

                <p class="fs-4"
                   data-js-item-name>
                    {{ data.name }}
                </p>
            </div>
        </div>
    </label>

    <a href="{{ urlListOrders|escape('html_attr') }}"
       class="d-flex"
       role="button"
       title="{{ lang.ordersLinkItemButtonTitle }}">

        <button type="button"
                class="btn  flex-grow-0  ps-5  pe-5  rounded-0  border  border-0  border-start  border-end-0  btn-outline-primary  list-orders-list__button-orders  button-primary-color-dark">

            {% include 'list_orders/list-orders-icon-go-orders.svg' %}
        </button>
    </a>

    <button type="button"
            class="btn  flex-grow-0  ps-4  pe-4  rounded-0  border  border-0  border-start  border-end-0  btn-outline-primary  button-primary-color-dark"
            value="{{ data.id }}"
            alt="{{ lang.infoItemButtonAlt }}"
            title="{{ lang.infoItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.infoFormModalIdAttribute }}"
            data-action="ListOrdersListItemComponent#sendMessageHomeListItemInfoToParent">

        {% include 'info-icon-blue-24x24.svg' %}
    </button>

    <button type="button"
            class="btn  flex-grow-0  ps-4  pe-4  rounded-0  border  border-0  border-start  border-end-0  btn-outline-primary  button-primary-color-dark"
            value="{{ data.id }}"
            alt="{{ lang.modifyItemButtonAlt }}"
            title="{{ lang.modifyItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.modifyFormModalIdAttribute }}"
            data-action="ListOrdersListItemComponent#sendMessageHomeListItemModifyToParent">

        {% include 'modify-icon-blue-24x24.svg' %}
    </button>

    <button type="button"
            data-js-remove-button
            class="btn  flex-grow-0  ps-4  pe-4  rounded-0  border  border-0  border-start  border-end  btn-outline-danger"
            value="{{ data.id }}"
            alt="{{ lang.removeItemButtonAlt }}"
            title="{{ lang.removeItemButtonTitle }}"
            data-bs-toggle="modal"
            data-bs-target="#{{ data.deleteFormModalIdAttribute }}"
            data-action="ListOrdersListItemComponent#sendMessageHomeListItemRemoveEvent">

        {% include 'remove-icon-red-24x24.svg' %}
    </button>
</li>