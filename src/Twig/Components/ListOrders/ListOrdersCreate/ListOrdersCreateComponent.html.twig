<form id="{{ formName }}"
	  name="{{ formName }}"
	  data-controller="ListOrdersCreateComponent"
	  class="contaniner  p-5"
	  method="post"
	  enctype="multipart/form-data"
	  novalidate>
	<input type="hidden"
		   name="{{ tokenCsrfFieldName }}"
		   value="{{ data.csrfToken }}" />

	{% if lang.validationErrors %}
	{{ component('AlertComponent', { data: lang.validationErrors }) }}
	{% endif %}


	<div class="mb-5 pt-5 display-1 text-center">
		{{ lang.title }}
	</div>

	<div class="mb-3">
		<label for="name"
			   class="form-label">
			{{ lang.nameLabel }}
		</label>
		<input type="name"
			   class="form-control"
			   id="name"
			   maxlength="50"
			   name="{{ nameFieldName }}"
			   placeholder="{{ lang.namePlaceholder }}"
			   value="{{ data.name }}"
			   required />
		<div class="invalid-feedback">
			{{ lang.nameMsgInvalid }}
		</div>
	</div>

	<div class="mb-3">
		<label for="description"
			   class="form-label">
			{{ lang.descriptionLabel }}
		</label>
		<textarea class="form-control"
				  id="description"
				  name="{{ descriptionFieldName }}"
				  maxlength="500"
				  placeholder="{{ lang.descriptionPlaceholder }}">{{ data.description }}</textarea>
		<div class="invalid-feedback">
			{{ lang.descriptionMsgInvalid }}
		</div>
	</div>

	<div class="mb-3">
		<label for="date_to_buy"
			   class="form-label">
			{{ lang.dateToBuyLabel }}
		</label>
		<input type="datetime-local"
			   class="form-control"
			   id="date_to_buy"
			   name="{{ dateToBuyFieldName }}"
			   value="{{ data.dateToBuy is null ? '' : data.dateToBuy|date('Y-m-d\\TH:i')}}" />

		<div class="invalid-feedback">
			{{ lang.dateToBuyMsgInvalid }}
		</div>
	</div>

	<div class="mb-3">
		<label for="user_group"
			   class="form-label">
			{{ lang.userGroupsLabel }}
		</label>
		<select class="form-select"
				aria-label="{{ lang.userGroupsLabel }}"
				id="user_group"
				name="{{ userGroupsFieldName }}"
				placeholder="{{ lang.userGroupsPlaceholder }}"
				required>
			{% for name, groupId in data.userGroups %}
			<option {{
					groupId==data.userGroupsSelected
					? 'selected'
					: 'value'
					}}="{{ groupId }}">{{ name }}</option>
			{% endfor %}
		</select>

		<div class="invalid-feedback">
			{{ lang.userGroupsMsgInvalid }}
		</div>
	</div>

	<div class="mt-5">
		<input type="submit"
			   class="btn btn-primary w-100"
			   name="{{ submitFieldName }}"
			   value="{{ lang.listOrdersCreateButton }}" />
	</div>
</form>